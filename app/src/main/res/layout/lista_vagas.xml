<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutListaVagas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagemVagaLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/txtViewEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome_Produto"
                 />

            <TextView
                android:id="@+id/txtViewReferencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/txtViewQuantidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descricao_Produto"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/txtViewTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:layout_marginTop="5dp"/>



        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/bootstrap_gray"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:focusable="false"/>


</LinearLayout>